messagesToXml :: [Message] -> String
messagesToXml msgs = render [
                      "<repl>",
                      "  <messages>",
                           msgsToXml,
                      "  </messages>",
                      "</repl>"
                     ] where
  render = unlines
  msgsToXml = render $ map msgToXml msgs
  msgToXml msg = render [
                          "<message>",
                          "  <type>",
                               show $ msg.msgType,
                          "  </type>",
                          "  <position>",
                               show $ msg.pos,
                          "  </position>",
                          "  <text><![CDATA[",
                               msg.text,
                          "  ]]></text>",
                          "</message>"
                        ]

